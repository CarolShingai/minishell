{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug with gdb",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/minishell",  // Substitua pelo caminho do binário.
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build with make",
			"miDebuggerPath": "/usr/bin/gdb",  // Caminho para o GDB, verifique se está correto no seu sistema.
			"logging": { "engineLogging": true }
		}
	]
}
